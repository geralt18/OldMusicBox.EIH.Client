@using System.Security.Claims
@{
    ViewBag.Title = "Index";
}

<h2>Home</h2>

<div>
    Logged in as @this.User.Identity.Name
</div>
<div>
    Claims:
    <table>
        <tr>
            <th>Type</th>
            <th>Value</th>
        </tr>
        @foreach ( var claim in ((ClaimsPrincipal)this.User).Claims )
        {
        <tr>
            <td>
                @claim.Type
            </td>
            <td>
                @claim.Value
            </td>
        </tr>
        }
    </table>
</div>

